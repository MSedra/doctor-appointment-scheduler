<div class="card">
  <h3 class="card-header">Edit Profile</h3>
  <div class="card-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field form-group">
        <%= f.label :name %>
        <%= f.text_field :name, {id: "name", placeholder: "Name", class:"form-control"} %><br/>

        <%= f.label :title %>
        <%= f.text_field :title, autofocus: true, autocomplete: "title", class:"form-control", placeholder: "Title" %><br/>

        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder: "Email" %><br/>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <%= f.password_field :current_password, autocomplete: "current-password", class:"form-control", placeholder: "Current Password ( To confirm your changes )" %>
      </div>
      <br/>
      <div>
        <p class="font-weight-bold">Leave blank if you don't want to change your password.</p>
        <%= f.password_field :password, autocomplete: "new-password", class:"form-control", 
        placeholder: "New Password ( " + @minimum_password_length.to_s + " characters minimum )" %> <br/>
          
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", placeholder: "Confirm New Password" %><br/>
      </div>

      <br/>

      <div class="actions">
        <%= f.submit "Update", class:'btn btn-primary', data: {turbo:false} %>
      </div>
    <% end %>
  </div>
</div>
<br/>

<div class="card">
  <h3 class="card-header">Cancel Account</h3>
  <div class="card-body">
    <h4 class="card-title">Unhappy?</h4> <br/>
    <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:'btn btn-danger', data: {turbo:false} %>
  </div>
</div>
<br/>

<%= link_to "Back", :back , class:'btn btn-primary' %>